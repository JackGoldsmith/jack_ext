{
    "name": "Jack's color changer",
    "description" : "Changes color of background on a page",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "hello_extensions.png",
      "default_title": "Please click"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens hello.html"
      }
    },
  	"permissions": [
    	"activeTab",
    	"storage"
  	]
  
}